<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <EditText
        android:id="@+id/txtPolaziste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/txtPolaziste" 
        android:singleLine="true" />

    <EditText
        android:id="@+id/txtOdrediste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopTextField"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/txtOdrediste"
        android:singleLine="true" />

    <Button
        android:id="@+id/btnCalcRoute"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopBtnPrikazi"
        android:hint="@string/txtPolaziste"
        android:onClick="clickHandler"
        android:text="@string/btnPrikazi" />
    
